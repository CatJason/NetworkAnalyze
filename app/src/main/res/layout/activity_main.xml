<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <antfortune.wealth.net.myapplication.widget.CountAnimationTextView
        android:id="@+id/count_animation_textView_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        android:scrollbars="none"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 本机信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/holo_blue_light"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_device_info_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="本机信息"
                    android:drawableStart="@drawable/arrow_down"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_device_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device Info: No data" />
            </LinearLayout>

            <!-- 域名访问 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/holo_orange_light"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_domain_access_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="域名访问"
                    android:drawableStart="@drawable/arrow_down"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/domain_access_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_domain_access"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Domain Access: No data" />
            </LinearLayout>

            <!-- 用于动态添加Ping、TCP、TraceRouter视图的容器 -->
            <LinearLayout
                android:id="@+id/dynamic_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
